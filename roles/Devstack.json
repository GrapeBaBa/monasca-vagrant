{
  "name": "Devstack",
  "description": "Sets up a devstack server for keystone and UI",
  "json_class": "Chef::Role",
  "default_attributes": {
    "apt": {
      "periodic_update_min_delay": 60
    },
    "monasca_agent": {
      "plugin": {
        "host_alive": {
          "init_config": {
            "ssh_port": 22,
            "ssh_timeout": 0.5,
            "ping_timeout": 1
          },
          "instances": {
            "mini-mon": {
              "name": "mini-mon",
              "host_name": "192.168.10.4",
              "alive_test": "ssh"
            }
          }
        }
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[devstack::mon-ui]",
    "recipe[devstack::keystone]",
    "recipe[devstack::agent_plugin_config]",
    "recipe[monasca_agent]"
  ],
  "env_run_lists": {
  }
}
