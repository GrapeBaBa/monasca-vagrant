{
  "name": "Thresh",
  "description": "Sets up Thresh",
  "json_class": "Chef::Role",
  "default_attributes": {
    "java": {
      "install_flavor": "openjdk",
      "jdk_version": "7"
    },
    "storm": {
      "nimbus": {
        "host": {
          "fqdn": "192.168.10.14"
        }
      },
      "ui": {
        "port": "8088"
      },
      "zookeeper": {
        "quorum": [
          "192.168.10.10"
        ]
      }
    },
    "monasca_agent": {
      "plugin": {
        "host_alive": {
          "init_config": {
            "ssh_port": 22,
            "ssh_timeout": 0.5,
            "ping_timeout": 1
          },
          "instances": {
            "devstack": {
              "name": "devstack",
              "host_name": "192.168.10.5",
              "alive_test": "ssh"
            }
          }
        }
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "role[Basenode]",
    "recipe[storm::nimbus]",
    "recipe[storm::supervisor]",
    "recipe[monasca_thresh]"
  ],
  "env_run_lists": {
  }
}
