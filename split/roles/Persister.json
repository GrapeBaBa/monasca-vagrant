{
  "name": "Persister",
  "description": "Sets up Persister",
  "json_class": "Chef::Role",
  "default_attributes": {
    "monasca_agent": {
      "plugin": {
        "host_alive": {
          "init_config": {
            "ssh_port": 22,
            "ssh_timeout": 0.5,
            "ping_timeout": 1
          },
          "instances": {
            "vertica": {
              "name": "vertica",
              "host_name": "192.168.10.8",
              "alive_test": "ssh"
            }
          }
        }
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "role[Basenode]",
    "recipe[monasca_persister]",
    "recipe[sysctl]"
  ],
  "env_run_lists": {
  }
}
